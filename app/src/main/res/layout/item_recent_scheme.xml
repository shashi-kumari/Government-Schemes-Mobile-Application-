<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/cardBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Category Badge -->
        <TextView
            android:id="@+id/category_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agriculture"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@color/government_green"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>

        <!-- Scheme Name -->
        <TextView
            android:id="@+id/scheme_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Scheme Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"/>

        <!-- Description -->
        <TextView
            android:id="@+id/scheme_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Scheme description goes here..."
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="3"
            android:ellipsize="end"/>

        <!-- Notification Date -->
        <TextView
            android:id="@+id/notification_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Notification: 2024-01-01"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"/>

        <!-- Created At -->
        <TextView
            android:id="@+id/created_at_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Added: Jan 01, 2024 10:00"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="italic"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/view_url_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="View URL"
                android:textSize="12sp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="8dp"/>

            <Button
                android:id="@+id/send_notification_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Send Notification"
                android:textSize="12sp"
                app:cornerRadius="8dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
