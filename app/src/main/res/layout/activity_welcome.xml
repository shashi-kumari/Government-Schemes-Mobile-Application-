<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".WelcomeActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="?attr/cardBackgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="40dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                app:srcCompat="@drawable/logo"
                android:background="@drawable/background_adaptive"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Government Schemes"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unlocking Opportunities, Empowering Lives..."
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginBottom="32dp"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discover government schemes tailored for you across agriculture, banking, business, education, health, and housing sectors."
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginBottom="40dp"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:lineSpacingExtra="4dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Get Started"
                android:id="@+id/welcome_login_button"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                app:cornerRadius="16dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Continue as Guest"
                android:id="@+id/welcome_guest_button"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="16dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>